<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Maui.Material;assembly=Maui.Material"
             x:Class="Playground.MainPage" Padding="48"
             Shell.BackgroundColor="{DynamicResource Surface2}"
             BackgroundColor="{DynamicResource Background}">
    <m:Material
        Elevation="6"
        CornerRadius="38"
        Color="{DynamicResource PrimaryContainer}"
        SurfaceTintColor="{DynamicResource OnPrimaryContainer}"
        ShadowColor="{DynamicResource Shadow}">
    </m:Material>
</ContentPage>
